---
import Layout from '../layouts/Layout.astro';
import IntroSection from '../components/IntroSection.astro';
import StatusSection from '../components/StatusSection.astro';
import { Github, Linkedin, Mail, FileText } from 'lucide-solid';
---

<Layout title="About | My Portfolio">
  
  <main class="pt-32 pb-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">About Me</h1>
      
      <IntroSection />
      
      <div class="mb-8">
        <h3 class="text-xl font-bold mb-6">Current Status</h3>
        <StatusSection />
      </div>
      
      <!-- Contact Section -->
      <div class="neu-flat p-8 rounded-2xl">
        <h3 class="text-xl font-bold mb-6">Get In Touch</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="mailto:john@example.com" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Mail class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">Email</p>
              <p class="text-[var(--muted-foreground)] text-sm">john@example.com</p>
            </div>
          </a>
          
          <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Github class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">GitHub</p>
              <p class="text-[var(--muted-foreground)] text-sm">@johndeveloper</p>
            </div>
          </a>
          
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Linkedin class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">LinkedIn</p>
              <p class="text-[var(--muted-foreground)] text-sm">John Developer</p>
            </div>
          </a>
          
          <a href="#" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <FileText class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">Resume</p>
              <p class="text-[var(--muted-foreground)] text-sm">Download PDF</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>