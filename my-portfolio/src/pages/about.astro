---
import Layout from '../layouts/Layout.astro';
import { Navigation } from '../components/Navigation';
import { Github, Linkedin, Mail, FileText } from 'lucide-solid';
---

<Layout title="About | My Portfolio">
  <Navigation client:load/>
  
  <main class="pt-24 pb-16 px-4">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl font-bold mb-8">About Me</h1>
      
      <div class="neu-flat p-8 rounded-2xl mb-8">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <div class="neu-convex p-6 rounded-2xl">
            <div class="w-32 h-32 rounded-full bg-gradient-to-br from-black/10 to-black/5 flex items-center justify-center dark:from-white/10 dark:to-white/5">
              <span class="text-4xl font-bold">JD</span>
            </div>
          </div>
          
          <div class="flex-1">
            <h2 class="text-2xl font-bold mb-2">John Developer</h2>
            <p class="text-[var(--muted-foreground)] mb-4">Full-Stack Developer & AI Enthusiast</p>
            
            <p class="leading-relaxed mb-6">
              Hi there! I'm a passionate developer with a love for creating elegant,
              performant applications. I specialize in modern web technologies and
              have a strong interest in artificial intelligence and machine learning.
            </p>
          </div>
        </div>
      </div>
      
      <!-- Skills Section -->
      <div class="neu-flat p-8 rounded-2xl mb-8">
        <h3 class="text-xl font-bold mb-6">Skills & Technologies</h3>
        
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
          {[
            { name: 'React/Next.js', level: 95 },
            { name: 'TypeScript', level: 90 },
            { name: 'Python', level: 85 },
            { name: 'Node.js', level: 88 },
            { name: 'AI/ML', level: 75 },
            { name: 'Database', level: 82 },
          ].map((skill) => (
            <div class="neu-pressed p-4 rounded-xl">
              <div class="flex justify-between mb-2">
                <span class="font-medium">{skill.name}</span>
                <span class="text-[var(--muted-foreground)] text-sm">{skill.level}%</span>
              </div>
              <div class="h-2 bg-[var(--muted)] rounded-full overflow-hidden">
                <div class="h-full bg-[var(--foreground)] rounded-full" style={`width: ${skill.level}%`} />
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Contact Section -->
      <div class="neu-flat p-8 rounded-2xl">
        <h3 class="text-xl font-bold mb-6">Get In Touch</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="mailto:john@example.com" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Mail class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">Email</p>
              <p class="text-[var(--muted-foreground)] text-sm">john@example.com</p>
            </div>
          </a>
          
          <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Github class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">GitHub</p>
              <p class="text-[var(--muted-foreground)] text-sm">@johndeveloper</p>
            </div>
          </a>
          
          <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <Linkedin class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">LinkedIn</p>
              <p class="text-[var(--muted-foreground)] text-sm">John Developer</p>
            </div>
          </a>
          
          <a href="#" class="neu-convex p-4 rounded-xl flex items-center gap-4 hover:bg-[var(--muted)]/50 transition-colors">
            <div class="w-12 h-12 neu-flat rounded-full flex items-center justify-center">
              <FileText class="w-5 h-5" />
            </div>
            <div>
              <p class="font-medium">Resume</p>
              <p class="text-[var(--muted-foreground)] text-sm">Download PDF</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>