---
import Layout from '../layouts/Layout.astro';
import { Navigation } from '../components/Navigation';
import { ProjectCard } from '../components/ProjectCard';
import { BlogCard } from '../components/BlogCard';
import { getCollection } from 'astro:content';

const projectsCollection = await getCollection('projects');
const postsCollection = await getCollection('blog');

const projects = projectsCollection
  .filter((p) => p.data.featured)
  .slice(0, 3)
  .map((project) => ({
    id: project.id,
    slug: project.slug,
    title: project.data.title,
    description: project.data.description,
    imageUrl: project.data.coverImage,
    githubUrl: project.data.githubUrl,
    demoUrl: project.data.demoUrl,
    tags: project.data.tags,
  }));

const posts = postsCollection.slice(0, 3).map((post) => ({
  id: post.id,
  title: post.data.title,
  slug: post.slug,
  excerpt: post.data.description,
  coverImage: post.data.coverImage,
  readingTime: post.data.readingTime,
  publishedAt: post.data.publishedAt.toISOString(),
  category: post.data.category,
}));
---

<Layout title="Home | My Portfolio">
  <Navigation client:load />
  
  <main class="pt-24 pb-16 px-4">
    <div class="max-w-6xl mx-auto space-y-12">
      <!-- Hero Section -->
      <section class="text-center py-12">
        <div class="neu-flat inline-block p-8 rounded-full mb-8">
          <div class="w-32 h-32 rounded-full bg-gradient-to-br from-black/10 to-black/5 flex items-center justify-center">
            <span class="text-5xl font-bold">JD</span>
          </div>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span>John</span>{' '}
          <span class="text-[var(--muted-foreground)]">Developer</span>
        </h1>
        
        <p class="text-xl text-[var(--muted-foreground)] max-w-2xl mx-auto">
          Full-stack developer passionate about creating elegant solutions.
        </p>
      </section>

      <!-- Featured Projects -->
      <section>
        <h2 class="text-2xl font-bold mb-6">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {projects.map((project) => (
            <ProjectCard project={project} />
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/projects" class="px-6 py-3 neu-flat rounded-xl font-medium hover:opacity-80">
            View All Projects →
          </a>
        </div>
      </section>

      <!-- Latest Posts -->
      <section>
        <h2 class="text-2xl font-bold mb-6">Latest Posts</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <BlogCard post={post} />
          ))}
        </div>
      </section>
    </div>
  </main>

  <footer class="py-8 px-4 border-t border-[var(--border)]">
    <div class="max-w-6xl mx-auto text-center text-[var(--muted-foreground)] text-sm">
      <p>© {new Date().getFullYear()} John Developer. Built with Astro & SolidJS.</p>
    </div>
  </footer>
</Layout>